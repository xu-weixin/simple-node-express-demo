<div class="row">
  <div class="col-md-6 mx-auto">
    <div class="card card-body">
      <img src="/images/logo.svg" class="logo mx-auto">
      <h3 class="text-center mt-3">登录</h3>
      <form action="/user/login" method="post">
        <div class="form-group">
          <label for="email">用户名</label>
          <input id="email" type="email" name="email" class="form-control" required placeholder="请输入注册邮箱" {{#if body.email}}value="{{body.email}}"{{/if}}>
        </div>
        <div class="form-group">
          <label for="password">密码</label>
          <input id="password" type="password" name="password" class="form-control" required placeholder="请输入6~12位长度的密码" pattern="^[a-zA-Z]\w{6,12}$" {{#if body.password}}value="{{body.password}}"{{/if}}>
        </div>
        <button type="submit" class="btn btn-primary btn-block mt-5">登录</button>
      </form>
    </div>
  </div>
</div>
